<h1>Groups</h1>

<%= link_to 'New Group', new_group_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Owner</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group_path(group) %></td>
        <td><%= group.description %></td>
        <td><%= group.owner.name %></td>
        <% if group.owner == current_user %>
          <td><%= link_to 'Edit', edit_group_path(group), class: 'btn btn-secondary' %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', group_path(group), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
