<% if current_user.following?(user) %>
  <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id), local: true, method: :delete) do |f| %>
    <div class="actions">
      <%= f.submit "Unfollow", class: "btn btn-danger" %>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: current_user.active_relationships.build(followed_id: user.id), local: true) do |f| %>
    <div class="actions">
      <%= f.submit "Follow", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
