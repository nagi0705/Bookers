<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= user_path(current_user) %>">
                  <i class="fas fa-home"></i> Home
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= users_path %>">
                  <i class="fas fa-users"></i> Users
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= books_path %>">
                  <i class="fas fa-book-open"></i> Books
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= top_liked_books_path %>">
                  <i class="fas fa-heart"></i> Top Liked Books
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" rel="nofollow" data-method="delete" href="<%= destroy_user_session_path %>">
                  <i class="fas fa-sign-out-alt"></i> Log out
                </a>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= root_path %>">
                  <i class="fas fa-home"></i> Home
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= about_path %>">
                  <i class="fas fa-link"></i> About
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= new_user_registration_path %>">
                  <i class="fas fa-user-plus"></i> Sign up
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="<%= new_user_session_path %>">
                  <i class="fas fa-sign-in-alt"></i> Log in
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main class="container mt-4">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %>" role="alert">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </main>
  <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</body>
</html>
